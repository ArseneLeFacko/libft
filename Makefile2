NAME = libft.a 

DYNAMIC = libft.so

SRC = ft_atoi.c ft_bzero.c ft_isalnum.c ft_isalpha.c ft_isascii.c ft_isdigit.c \
	  ft_isprint.c ft_itoa.c ft_lstadd.c ft_lstdel.c ft_lstdelone.c \
	  ft_lstiter.c ft_lstmap.c ft_lstnew.c ft_memalloc.c ft_memccpy.c \
	  ft_memchr.c ft_memcmp.c ft_memcpy.c ft_memdel.c ft_memmove.c ft_memset.c \
	  ft_putchar.c ft_putchar_fd.c ft_putendl.c ft_putendl_fd.c ft_putnbr.c \
	  ft_putnbr_fd.c ft_putstr.c ft_putstr_fd.c ft_strcat.c ft_strchr.c \
	  ft_strclr.c ft_strcmp.c ft_strcpy.c ft_strdel.c ft_strdup.c ft_strequ.c \
	  ft_striter.c ft_striteri.c ft_strjoin.c ft_strlcat.c ft_strlen.c \
	  ft_strmap.c ft_strmapi.c ft_strncat.c ft_strncmp.c ft_strncpy.c \
	  ft_strnequ.c ft_strnew.c ft_strnstr.c ft_strrchr.c ft_split.c \
	  ft_strstr.c ft_substr.c ft_strtrim.c ft_tolower.c ft_toupper.c \
	  ft_strlcpy.c ft_calloc.c

OBJ = $(subst .c,.o,$(SRC))

HEADER = libft.h

all: $(NAME)

so:
	gcc -Wall -Wextra -Werror -fPIC -c $(SRC)
	gcc -shared -Wl,-soname,$(DYNAMIC) -o $(DYNAMIC) $(OBJ)

$(NAME):
	gcc -Wall -Wextra -Werror -c $(SRC) $(HEADER)
	ar rc $(NAME) $(OBJ)
	ranlib $(NAME)

clean:
	/bin/rm -f $(OBJ)

fclean: clean
	/bin/rm -f $(NAME) $(DYNAMIC)

re: fclean all

.PHONY: clean fclean all re
